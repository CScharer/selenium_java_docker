<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Mobile Testing Suite" verbose="1" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="Mobile Browser Tests" preserve-order="true">
        <classes>
            <class name="com.cjs.qa.junit.tests.mobile.MobileBrowserTests"/>
        </classes>
    </test>
    
    <test name="Responsive Design Tests" preserve-order="true">
        <classes>
            <class name="com.cjs.qa.junit.tests.mobile.ResponsiveDesignTests"/>
        </classes>
    </test>
</suite>

